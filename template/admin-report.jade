extends admin-layout

block content
    h2 Reports
    table
        thead
            tr
                th ID
                th Source
                th Type
                th Item
                th High-level Reason
                th Status
                th Options
        tbody
            each val in rows
                tr(data-idreport=val.idreport)
                    td= val.idreport
                    td= val.source
                    td= val.type
                    td= val.item
                    td= reasons[val.highlevel]
                    td= statuses[val.status]
                    td
                        a(class='btn btn-default btn-xs na-reportdetails', href='/admin/report/item/' + val.idreport)
                            span(class='glyphicon glyphicon-list-alt', aria-hidden='true')
    div(class='btn-group', role='group', style='padding-top:10px;')
        if low != 0
            a(class='btn btn-primary', href='?low=' + (low - 1000) + '&high=' + (high - 1000)) Previous Page
        a(class='btn btn-primary', href='?low=' + (low + 1000) + '&high=' + (high + 1000)) Next Page
        a(class='btn btn-default', href='/admin/report/create') Create Report