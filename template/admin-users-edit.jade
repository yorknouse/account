extends admin-layout

block content
    h2 Edit User
    if error
        if error=='S_OK'
            div(class='alert alert-success', role='alert')
                p Report updated
        else
            div(class='alert alert-danger', role='alert')
                p Unknown error #{error} encountered when submitting report
    form(name='user', method='post', class='form-horizontal')
        div(class='form-group')
            label(class='col-sm-2 control-label') User ID
            div(class='col-sm-10')
                p(class='form-control-static')= user.idusers
        div(class='form-group')
            label(for='fname', class='col-sm-2 control-label') First Name
            div(class='col-sm-10')
                input(class='form-control', name='fname', type='text', value=user.fname)
        div(class='form-group')
            label(for='lname', class='col-sm-2 control-label') Last Name
            div(class='col-sm-10')
                input(class='form-control', name='lname', type='text', value=user.lname)
        div(class='form-group')
            label(for='email', class='col-sm-2 control-label') Email
            div(class='col-sm-10')
                input(class='form-control', name='email', type='email', value=user.email)
        div(class='form-group')
            label(for='nick', class='col-sm-2 control-label') Nickname
            div(class='col-sm-10')
                input(class='form-control', name='nick', type='text', value=user.nick)
        div(class='form-group')
            label(class='col-sm-2 control-label') Last login
            div(class='col-sm-10')
                p(class='form-control-static')= user.lastLogin
        div(class='form-group')
            label(for='activated', class='col-sm-2 control-label') Status
            div(class='col-sm-10')
                select(class='form-control', name='activated', required='required')
                    for val in activationStatus
                        if val !== null
                            option(value=activationStatus.indexOf(val), selected=(user.activated == activationStatus.indexOf(val)))= val
        div(class='form-group')
            div(class='col-sm-offset-2 col-sm-10')
                a(class='btn btn-default', href='/admin/users') Back
                button(type='submit', class='btn btn-primary') Update